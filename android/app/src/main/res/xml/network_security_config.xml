<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!--
         Allow cleartext for local network communication with daemon.
         This app connects to a local daemon over the LAN which uses HTTP.
         Production deployments should use TLS, but for local dev/testing
         and typical home network use, cleartext is acceptable.
    -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>
