<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme (dark only) -->
    <style name="Theme.RAS" parent="android:Theme.Material.NoActionBar">
        <!-- Primary brand color -->
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_variant</item>
        <item name="android:colorAccent">@color/secondary</item>

        <!-- Background and surface -->
        <item name="android:colorBackground">@color/background</item>
        <item name="android:windowBackground">@color/background</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:navigationBarColor">@color/background</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/on_background</item>
        <item name="android:textColorSecondary">@color/on_surface</item>
    </style>
</resources>
